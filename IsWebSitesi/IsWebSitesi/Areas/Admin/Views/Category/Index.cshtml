@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.Name</td>
            <td><a href="#" class="btn btn-primary">Düzenle</a></td>
            <td>
                <a href="/Admin/Category/DeleteCategory/@item.CategoryID" id="DeleteBtn"
                   onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-warning">Yeni Kategori Ekle</a>
<br />
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

