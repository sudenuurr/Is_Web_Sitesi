@using IsWebSitesi.Areas.Member.Models
@model UserUpdateModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}
<div class="page-breadcrumb">
    <div class="row align-items-center">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="page-title mb-0 p-0">Profil Sayfası</h3>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-xlg-3 col-md-5">
            <div class="card">
                <div class="card-body profile-card">
                    <center class="mt-4">
                        <img src="~/CompanyImage/@Model.imageurl"
                             class="rounded-circle" width="150" />
                        <h4 class="card-title mt-2">@Model.username</h4>
                    </center>
                </div>
            </div>
        </div>
        <!-- Column -->
        <!-- Column -->
        <div class="col-lg-8 col-xlg-9 col-md-7">
            <div class="card">
                <div class="card-body">
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label class="col-md-12 mb-0">Kullanıcı Adı</label>
                            @Html.TextBoxFor(model => model.username, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputName1" class="col-md-12 mb-0">Ad Soyad</label>
                            @Html.TextBoxFor(model => model.namesurname, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3" class="col-md-12 mb-0">Mail Adresi</label>
                            @Html.TextBoxFor(model => model.mail, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail3">Yeni Şifreniz</label>
                            @Html.PasswordFor(model => model.password, new { @class = "form-control" })
                        </div>
                        <div class="col-sm-12 d-flex">
                            <button class="btn btn-success mx-auto mx-md-0 text-white">
                                Profil
                                Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>



