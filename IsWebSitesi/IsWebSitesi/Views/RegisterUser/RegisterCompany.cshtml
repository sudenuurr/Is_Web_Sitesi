@model EntityLayer.Concrete.Company
@{
    ViewData["Title"] = "RegisterCompany";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<br />
<br />
<br />
<br />
<div style="text-align: center;"><h1>Firma Bilgilerini Doldur</h1></div>

<br />
@using (Html.BeginForm("RegisterCompany", "RegisterUser", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">

                    <br />
                    @Html.Label("Açıklama")
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Description)
                    <br />
                    @Html.Label("Web Sitesi")
                    @Html.TextBoxFor(x => x.Website, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Website)
                    <br />
                    @Html.Label("Telefon")
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Phone)
                    <br />
                    @Html.Label("Adres")
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Address)
                    <br />
                    @Html.Label("Şehir")<br />
                    @Html.DropDownListFor(x => x.CityID, (List<SelectListItem>)ViewBag.citylist, new { @class = "form-control" })
                    <br /><br />
                    <button class="btn btn-secondary">Ekle</button>
                    <a href="/DashBoard/Index" class="btn btn-secondary">Panele Git</a>

                </form>
            </div>
        </div>
    </div>

}
