@model EntityLayer.Concrete.Company
@{
    ViewData["Title"] = "CompanyEditProfile";
    Layout = "~/Views/Shared/EmployerLayout.cshtml";
}
<br />
<br />
<br />
<br />
<h2 style="color:darkblue; text-align:center">Firma Bilgileri</h2>
@using (Html.BeginForm("CompanyEditProfile", "Company", FormMethod.Post))
{
    @Html.HiddenFor(x => x.CityID)
    @Html.HiddenFor(x => x.CompanyID)
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.Label("Firma Adı")
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                    <div class="form-group">
                        @Html.Label("Web Site")
                        @Html.TextBoxFor(x => x.Website, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Website)
                    </div>
                    <div class="form-group">
                        @Html.Label("Adres")
                        @Html.TextAreaFor(x => x.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Address)
                    </div>
                    <div class="form-group">
                        @Html.Label("Telefon Numarası")
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Phone)
                    </div>
                    <div class="form-group">
                        @Html.Label("Açıklama")
                        @Html.TextAreaFor(x => x.Description,5,3 ,new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Şehir")<br />
                        @Html.DropDownListFor(x => x.CityID, (List<SelectListItem>)ViewBag.citylist, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Resim</label>
                        <input class="form-control" type="file" asp-for="@Model.ImageUrl" />
                    </div>

                    <button type="submit" class="btn btn-info">Güncelle</button>
                </form>
            </div>
        </div>
    </div>

}




























