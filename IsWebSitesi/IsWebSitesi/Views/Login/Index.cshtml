@model UserSignInViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<br /><br /><br /><br />
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle text-center" style=" color: rgb(251, 36, 106); font-weight: bold;">Oturum Aç</h3>
        <br />
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">
                            Kullanıcı adınız
                        </label>
                        <input type="text" class="form-control" asp-for="@Model.username" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="password" asp-for="@Model.password" class="form-control" id="exampleInputPassword1" placeholder="" required="">
                    </div>
                   
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a href="/RegisterUser/Index/" style="color: black;">Bir Hesabınız Yok mu?</a></p>
                </form>
            </div>
        </div>
    </div>
</section>
