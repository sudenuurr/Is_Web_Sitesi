
@model FilterViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<!doctype html>

<html class="no-js" lang="zxx">

<body>
    <main>

        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider section-overly slider-height2 d-flex align-items-center" data-background="/jobportal/assets/img/hero/about.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>İş İlanları</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End -->
        <!-- Job List Area Start -->
        <div class="job-listing-area pt-120 pb-120">
            <div class="container">
                <div class="row">
                    <!-- Left content -->

                    <div class="col-xl-3 col-lg-3 col-md-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="small-section-tittle2 mb-45">
                                    <div class="ion">
                                        <svg xmlns="http://www.w3.org/2000/svg"
                                             xmlns:xlink="http://www.w3.org/1999/xlink"
                                             width="20px" height="12px">
                                            <path fill-rule="evenodd" fill="rgb(27, 207, 107)"
                                                  d="M7.778,12.000 L12.222,12.000 L12.222,10.000 L7.778,10.000 L7.778,12.000 ZM-0.000,-0.000 L-0.000,2.000 L20.000,2.000 L20.000,-0.000 L-0.000,-0.000 ZM3.333,7.000 L16.667,7.000 L16.667,5.000 L3.333,5.000 L3.333,7.000 Z" />
                                        </svg>
                                    </div>
                                    <h4>Filtreleme</h4>
                                </div>
                            </div>
                        </div>
                        
                        @await Component.InvokeAsync("AdvertFilterPartial")


                    </div>
                    <div class="col-xl-9 col-lg-9 col-md-8">
                        <!-- Featured_job_start -->
                        <section class="featured-job-area">
                            <div class="container">
                                <!-- Count of Job list Start -->
                                <!-- Count of Job list End -->
                                <!-- single-job-content -->
                                
                                @if (Model == null)
                                {
                                    @await Component.InvokeAsync("AdvertContent")
                                }
                                else
                                {
                                    @foreach (var item in Model.Adverts)
                                    {
                                        <div class="single-job-items mb-30">
                                            <div class="job-items">
                                                <div class="company-img">
                                                    <a href="#"><img src="~/CompanyImage/@item.Company.ImageUrl" style="width:9em; height:7em;" alt=""></a>
                                                </div>
                                                <div class="job-tittle job-tittle2">
                                                    <a href="#">
                                                        <h4>@item.Department</h4>
                                                    </a>
                                                    <ul>
                                                        <li>@item.Company.Name</li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="items-link items-link2 f-right">
                                                <a href="/Adverts/AdvertsDetail/@item.AdvertID">@item.JobType</a>
                                                <span>@item.PostedDate.ToShortDateString()</span>
                                            </div>
                                        </div>
                                    }
                                }

                                @*  @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))*@
                                <!-- single-job-content -->
                            </div>
                        </section>
                        <!-- Featured_job_end -->
                    </div>
                </div>
            </div>
        </div>
        <!-- Job List Area End -->
        <!--Pagination Start  -->
        <!--Pagination End  -->

    </main>
</body>
</html>